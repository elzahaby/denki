<?xml version='1.0' encoding='utf-8'?>
<widget id="com.denki.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <preference name='phonegap-version' value='cli-8.0.0' />
	<preference name='pgb-builder-version' value='2' />
    <name>Denki</name>
    <description>
       Brainstorm with the World
    </description>
    <author email="mohammad@elzahaby.at" href="https://elzahaby.at">
	Mohammad Elzahaby
    </author>
	<icon src="icon.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
     	<config-file target="AndroidManifest.xml" parent="/*">
		
        </config-file>
    </platform>

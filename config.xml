        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
		<preference name="swift-version" value="3.0" />
		<config-file target="*-Info.plist" parent="ITSAppUsesNonExemptEncryption">
    		<key>false</key>
		</config-file>
    </platform>
    
    <preference name="DisallowOverscroll" value="true" />
	<preference name="orientation" value="portrait" />
	<preference name="Fullscreen" value="true" />
	<preference name="HideKeyboardFromAccessoryBar" value="true" />
	
    <plugin name="cordova-plugin-whitelist"/>
    <plugin name="cordova-plugin-console" />
    <plugin name="cordova-plugin-statusbar" />
	<plugin name="cordova-plugin-keyboard" />
	
    <plugin name="cordova-plugin-dialogs" />
    <plugin name="phonegap-plugin-push" />
</widget>
